<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfAccueil">

    <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:text="Menu principal"
            android:textSize="26sp"
            android:layout_weight="5"
            android:id="@+id/title"
            android:layout_marginBottom="200dp"
            android:gravity="center_horizontal">

    </TextView>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ajoutbtn"
            android:text="Ajouter note"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/title"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listNote"
            android:layout_marginBottom="20dp"
            android:text="Voir les notes"
            android:backgroundTint="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/ajoutbtn"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deconnexion"
            android:text="Deconnexion"
            android:backgroundTint="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/listNote"
    />





</RelativeLayout>